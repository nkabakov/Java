<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">

    <TextArea fx:id="textArea" prefWidth="100" VBox.vgrow="ALWAYS"/>

    <HBox >
        <TextField fx:id="textField" onAction="#onActionBtnTextField" HBox.hgrow="SOMETIMES"/>
        <Button fx:id="sendBtn" text="Отправить" onAction="#onActionBtn"/>
    </HBox>
</VBox>




